<Application
    RequestedThemeVariant="Dark"
    x:Class="KanaPlayer.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:KanaPlayer.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <TrayIcon.Icons>
        <TrayIcons>
            <controls:KanaTrayIcon />
        </TrayIcons>
    </TrayIcon.Icons>

    <Application.Styles>
        <FluentTheme />

        <StyleInclude Source="avares://KanaPlayer/Theming/Styles/TextBlockStyle.axaml" />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Controls/KanaWindowTitleBar.axaml" />
                <ResourceInclude Source="/Controls/KanaNavigationView.axaml" />
                <ResourceInclude Source="/Controls/KanaSettingsGroup.axaml" />
                <ResourceInclude Source="/Controls/ProgressRing.axaml" />
                <ResourceInclude Source="/Controls/InlineHyperlink.axaml" />
                <ResourceInclude Source="/Controls/Hosts/Dialog/KanaDialog.axaml" />
                <ResourceInclude Source="/Controls/Hosts/Dialog/KanaDialogHost.axaml" />
                <ResourceInclude Source="/Controls/Hosts/Toast/KanaToast.axaml" />
                <ResourceInclude Source="/Controls/Hosts/Toast/KanaToastHost.axaml" />

                <ResourceInclude Source="/Theming/Button.axaml" />
                <ResourceInclude Source="/Theming/ToggleButton.axaml" />
                <ResourceInclude Source="/Theming/TabControl.axaml" />
                <ResourceInclude Source="/Theming/TabItem.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>