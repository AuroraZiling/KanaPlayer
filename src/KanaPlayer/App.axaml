<Application
    RequestedThemeVariant="Dark"
    x:Class="KanaPlayer.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Styles>
        <FluentTheme />

        <StyleInclude Source="avares://KanaPlayer/Theming/Styles/TextBlockStyle.axaml" />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Controls/KanaWindowTitleBar.axaml" />
                <ResourceInclude Source="/Controls/KanaNavigationView.axaml" />
                <ResourceInclude Source="/Controls/KanaSettingsGroup.axaml" />
                <ResourceInclude Source="/Controls/ProgressRing.axaml" />
                <ResourceInclude Source="/Controls/InlineHyperlink.axaml" />

                <ResourceInclude Source="/Theming/Button.axaml" />
                <ResourceInclude Source="/Theming/ToggleButton.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>