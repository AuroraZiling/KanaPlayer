                        <TextBlock Classes="Caption" Text="Sh1awase / SkyStWr" />
                    </StackPanel>
                    <Button Content="Play" Command="{Binding PlayCommand}"></Button>
                </StackPanel>
            </Grid>
        </Panel>
    </Grid>
</UserControl>
